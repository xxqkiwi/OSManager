<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="15" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.disktest2.memory.MemoryController">

    <!-- ① 内存条区域：用 VBox 做父节点，和你的 initialize() 强转对应 -->
    <VBox id="memoryPane" maxWidth="Infinity" VBox.vgrow="ALWAYS">
        <Canvas fx:id="canvas" width="640" height="60" />
        <Canvas fx:id="diskCanvas" />
    </VBox>

    <!-- ④ 内存使用率条 -->
    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="usage-bar">
        <!--<Label text="内存使用情况：" styleClass="usage-label"/>-->
        <ProgressBar fx:id="usageBar" prefWidth="200"/>
        <Label fx:id="usageText" styleClass="usage-percent"/>
    </HBox>

